	<select id="listSearchCount" resultType="int">
		<![CDATA[
	select 
		count(seqno)		
	FROM 
		test_metami
	where
		seqno > 0
	]]>
	</select>
	<!-- 사용되는곳 -->
	<sql id="search">
	<if test="searchType != null">
		and title like concat('%',#{keyword},'%')
	</if>
	<if test="searchType == 't'.toString()">
		and title like concat('%',#{keyword},'%')
	</if>
	<if test="searchType == 'c'.toString()">
		and contents like concat('%',#{keyword},'%')
	</if>
	<if test="searchType == 'tc'.toString()">
		and ( title like concat('%',#{keyword},'%') or contents like concat('%', #{keyword}, '%'))
	</if>
	</sql>
	<!-- 사용되는곳 -->
	<select id="listCriteria" resultType="TestBoardVO">
	<![CDATA[
	select 
		seqno, title,
		contents, regdate
		FROM test_metami
		where seqno > 0
	]]>
	
		<include refid="search"></include>
	
	<![CDATA[
		order by seqno desc
		limit #{pageStart}, #{perPageNum}
	]]>
	</select>
	<!-- 사용되는곳 -->
	<select id="countPaging" resultType="int">
	<![CDATA[
	select 
		count(seqno)		
	FROM 
		test_metami
	where
		seqno > 0
	]]>
		<include refid="search"></include>
		
	</select>
	
	
	<select id="listSearch" resultType="TestBoardVO">
	<![CDATA[
	select 
		seqno, title,
		contents, regdate
		FROM test_metami
		where seqno > 0
		order by seqno desc, regdate desc
		limit #{pageStart}, #{perPageNum}
	]]>
	</select>
<!-- 사용되는곳 -->
	<select id="testBoardView" parameterType="TestBoardVO" resultType="TestBoardVO">
		SELECT seqno, title,
		contents, regdate
		FROM test_metami
		where seqno = #{seqno}
	</select>
<!-- 사용되는곳 -->
	<insert id="testBoardInsert" parameterType="TestBoardVO">
		INSERT INTO
		test_metami
		(title, contents, regdate)
		VALUES(#{title}, #{contents},
		now())
	</insert>
<!-- 사용되는곳 -->
	<update id="testBoardUpdate" parameterType="TestBoardVO">
		UPDATE test_metami
		SET title=#{title}, contents=#{contents}
		WHERE seqno= #{seqno}
	</update>
<!-- 사용되는곳 -->
	<delete id="testBoardDelete" parameterType="TestBoardVO">
		DELETE FROM
		test_metami
		WHERE seqno=#{seqno}
	</delete>
</mapper>
