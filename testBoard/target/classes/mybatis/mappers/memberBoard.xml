<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TestBoardVO">

	<!-- 회원가입 -->
	<insert id="MemberInsert" parameterType="MemberBoardVO">
		INSERT INTO
		member_metami
		(id, password, name)
		VALUES(#{id}, #{password}, #{name})
	</insert>
	<!-- 회원찾기 -->
	<select id="MemberSelect" parameterType=MemberBoardVO
		resultType="MemberBoardVO">
		SELECT id,password FROM member_metami
		where name = #{name}
	</select>
	<!-- 회원탈퇴 -->
	<delete id="MemberDelete" parameterType="MeberBoardVO">
		DELETE FROM
		member_metami
		WHERE id=#{id}
	</delete>

</mapper>
